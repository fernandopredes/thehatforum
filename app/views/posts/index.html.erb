<div id="posts">
  <%@posts.each do |post| %>
  <div class="post">
    <h2 class="title"><%= link_to post.title, post %></h2>
    <div class="date">
      <p>Published at <%= time_ago_in_words(post.created_at) %></p>
      <p>Published by: <%= post.user.email %></p>
    </div>
  </div>
  <% end %>
</div>
