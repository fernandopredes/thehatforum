<div class="row">
  <div class="col-8">
    <div id="posts">
      <%@posts.each do |post| %>
      <div class="post">
        <h2 class="title"><%= link_to post.title, post %></h2>
        <div class="date">
          <p>Published at <%= time_ago_in_words(post.created_at) %></p>
          <p>Published by: <%= post.user.username %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-4">
    <div id="posts">
      <div id="menu">
        <p><%= link_to root_path, class: "d-flex justify-content-between icon" %><span>All Discussions</span><%= image_tag "comment-regular.svg", width: "33px" %></a></p>
        <hr>
        <p><a href="/frontend" class="d-flex justify-content-between icon"><span>Front-End</span><%= image_tag "frontend.svg", width: "33px" %> </a></p>
        <p><a href="/backend" class="d-flex justify-content-between icon"><span>Back-End</span><%= image_tag "backend.svg", width: "33px" %> </a></p>
        <p><a href="/gamedev" class="d-flex justify-content-between icon"><span>Game Dev</span><%= image_tag "game.svg", width: "33px" %> </a></p>
        <p><a href="/datascience" class="d-flex justify-content-between icon"><span>Data Science</span><%= image_tag "data.svg", width: "33px" %> </a></p>
      </div>
    </div>
  </div>
</div>
